<%= turbo_stream.update "usertable" do %>
  <div>
    <div class="table-header">
      <span></span>
      <span class="text-white font-bold ml-8">Name</span>
      <span class="text-white font-bold ml-2">Email</span>
      <span class="text-white font-bold ml-2">Status</span>
      <span class="text-white font-bold ml-2">Date</span>
      <span class="text-white font-bold ml-2">Action</span>
      <%= button_to "Create Trader" , new_user_path, class: "btn-create"%>
    </div>

    <% @user.each_with_index do |user, index|%>
      <%= render "userlist", user: user, index: index %>
    <% end %>
  </div>
<% end %>
