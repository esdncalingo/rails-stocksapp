<%= render "navbar" %>

<div class="flex justify-center items-center">

  <div class="flex flex-col gap-4 pt-12 min-w-[300px]">
    <span class="text-white text-4xl font-bold">Deposit</span>

    <div class="flex flex-col mb-4">
      <label class="text-white">Currency</label>
      <select >
        <option value="PHP">PHP Philippine Peso</option>
        <option value="USD">USD US Dollar</option>
      </select>
    </div>
  
    <div class="flex flex-col mb-8">
      <label for="currency-field" class="text-white">Amount</label>
      <input type="text" name="currency-field" id="currency-field" 
        pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" 
        data-type="currency" 
        maxlength="9"
        placeholder="P0.00">
    </div>
  
    <div class="self-center">
      <%= button_to "Continue", "", class: "btn-primary" %>
    </div>
  </div>

</div>