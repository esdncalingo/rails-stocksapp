<%= render "navbar" %>

<div class="flex flex-col mx-[40px]">

  <div id="container" class="flex flex-col justify-center items-center px-8">

    <%= turbo_frame_tag "news", class: "w-[965px] pt-8" do %>
      <div class="self-start mb-4 p-4 flex items-center">
        <span class="text-4xl text-white font-bold ">Latest News</span>
      </div>

      <div class="flex flex-col gap-[1px] max-h-[250px] overflow-auto">
        <% @news["news"].each do |news| %>
          <%= render "home/lists/latestnews", news: news %>
        <% end %>
      </div>

    <% end %>
    
    <%= turbo_frame_tag "mostpopular", class: "pt-8" do %>
      <div class="self-start mb-4 p-4 flex items-center">
        <span class="text-4xl text-white font-bold ">Most active companies</span>
        <span class="text-gray-500 ml-auto cursor-pointer transition-all duration-100 ease-in hover:text-[#03e9f4] hover:underline">View more markets</span>
      </div>
      <div class="flex text-gray-500 p-4">
        <span class="min-w-[320px]">Name</span>
        <span class="min-w-[200px] text-center">Latest Price</span>
        <span class="min-w-[200px] text-center">Change</span>
        <span class="min-w-[200px] text-right">Market Cap</span>
      </div>

    
      <% @most_active.each do |data| %>
        <%= render "home/lists/mostpopular", company: data %>
      <% end %>
    <% end %>
    
  </div>

</div>