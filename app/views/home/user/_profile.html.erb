
<div style="color: #ccc">
  <div class="flex flex-col">
    <% @portfolio.each do | data |%>
      <div class="flex">
      <div class="p-2">
        <img src=<%= data["logo"]%> style="height:100px; width:100px">
      </div>
      <div class="p-2"><%=data["code"]%></div>
      <div class="p-2"><%=data["name"]%></div>
      <div class="p-2"><%=data["qty"]%></div>
      <div class="p-2"><%=data["latest_price"]%></div>
      <div class="p-2">% <%=data["change_percent"]%></div>
    </div>
    <%end%>

  </div>
</div>
