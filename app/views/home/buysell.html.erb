<%= render "navbar" %>

<div class="flex flex-col items-center pt-8">
  <div class="flex flex-col mb-8">
    <div id="buysell">
      <%= render "home/user/form_buysell" %>
    </div>

    <div id="candlestick" class="bg-[#0b0f16] rounded-xl p-2">
      <%= render "home/components/candlestick_chart" %>
    </div>
  </div>
  
  <div class="flex flex-col gap-[2px]">

    <div>
    
    </div>

    <div class="mb-12">
      <div class="mb-2">
        <% @paginated_items.each do |item| %>
          <%= render "home/components/paginated_frame", 
            item: item, 
            url: check_url(item['symbol']), 
            quote: check_quote(item['symbol'])
          %>
        <% end %>
      </div>
      <%= paginate @paginated_items %>
    </div>
  </div>
</div>

