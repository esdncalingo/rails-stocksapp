<%=form_with(model: @authentication, html: { class: "flex flex-col rounded-md w-full max-w-sm mx-auto ring-[#f890e7] ring-2" }) do |form|%>
  <div class="p-4">
    <span class="text-white text-4xl font-bold">Login</span>
  </div>
  
  <div class="flex flex-col p-6">
    <div class="mb-4">
      <%=form.label "Username", class: "form-label"%>
      <%=form.text_field :username, class: "form-inputbox"%>
    </div>
    
    <div class="mb-1">
      <%=form.label "Password", class: "form-label"%>
      <%=form.password_field :password, class: "form-inputbox"%>
    </div>

    <div class="mb-16">
      <span class="text-[#f890e7] text-xs">Forgot your password?</span>
    </div>
  
    <div class="flex items-center justify-between mb-8 self-center">
      <%= form.submit "Next", class: "btn-primary" %>
    </div>
  </div>
  
  <div class="flex flex-col p-4 bg-[#2d3b5a] rounded-b-md">
    <%= link_to "Sign Up", new_account_path, class: "text-[#03e9f4] text-sm self-center" %>
  </div>

<%end%>