<%= form_with(scope: @user, url: deposit_addbalance_path, class: "flex flex-col gap-4 min-w-[400px] bg-[#0b0f16] p-4 rounded-xl" ) do |form| %>
  <span class="text-white text-4xl font-bold">Deposit</span>

  <div class="flex flex-col mb-4">
    <label class="text-white">Currency</label>
    <select >
      <option value="PHP">PHP Philippine Peso</option>
      <option value="USD">USD US Dollar</option>
    </select>
  </div>

  <div class="flex flex-col mb-8">
    <label for="amount" class="text-white">Amount</label>
    <input type="text" name="amount" id="amount" 
      pattern="^\P\d{1,3}(,\d{3})*(\.\d+)?$" 
      data-type="currency" 
      maxlength="9"
      placeholder="P0.00">
  </div>

  <div class="self-center">
    <%= form.submit "Deposit", class: "btn-primary mb-4" %>
  </div>
<% end %>